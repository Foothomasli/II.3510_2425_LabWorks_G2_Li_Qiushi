<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:textSize="25sp"
        android:text="Current Text : "/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp"
        android:background="@drawable/border"
        android:textSize="30sp"
        android:text="@string/main_text" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/text"
        android:layout_marginTop="30sp"
        android:textSize="25sp"
        android:text="New Text : "/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_below="@id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp"
        android:background="@drawable/border"
        android:hint="Enter new text"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:text="      Modify text      "
        />

    <Button
        android:id="@+id/color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:text="Modify text colour"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/color_button"
        android:layout_marginTop="30sp"
        android:textSize="25sp"
        android:text="New text size : "/>

    <EditText
        android:id="@+id/new_size"
        android:layout_below="@id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp"
        android:background="@drawable/border"
        android:hint="Enter new text size"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/size_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:text="  Modify text size  "
        />



</RelativeLayout>